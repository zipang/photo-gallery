---
interface Props {
	lang?: string;
	title?: string;
}
const { lang = "en", title = "Photo Gallery" } = Astro.props;
---

<!doctype html>
<html lang={lang}>
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<title>{title}</title>
		<link rel="stylesheet" href="/src/styles/global.css" />
	</head>
	<body>
		<div class="container">
			<slot />
		</div>
	</body>
</html>
